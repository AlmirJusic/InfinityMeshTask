@using InfinityMeshTask;
@model List<CityVM>


<h3 style="text-align:center; padding:25px;">Presidential election results</h3>
<div class="text-center">
    <form asp-controller="InfinityMeshTask" asp-action="Index" method="post" enctype="multipart/form-data">
        <input type="file" name="file" />
        <hr />
        <button type="submit">Upload</button>
    </form>
</div>


<hr />
<hr />
@foreach (CityVM item in Model)
{

    <td>@item.Name</td>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Votes</th>
                <th>Percentage</th>
            </tr>

        </thead>
        <tbody>
            @foreach (CandidateVM i in item.Candidate)
            {
                <tr>

                    <td>@i.Name</td>
                    <td>@i.Votes</td>
                    <td>@i.Average %</td>
                </tr>

            }
        </tbody>
    </table>
    <hr />
}
